<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/background"
    
    >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Travel Date " 
        android:textColor="#000000"
        android:textStyle="normal|bold"
        android:textSize="20sp" 
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        
        />

    <EditText
        android:id="@+id/ed_date"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/textView1"
        android:background="@drawable/ed_oval"
        android:hint="@string/date"
        android:inputType="date"
        android:textColorHint="#000000"
        android:textStyle="normal|bold"
        android:textSize="20sp" 
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textColor="#000000"
        >

        <requestFocus />
    </EditText>
    <TextView
        android:id="@+id/From"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_below="@+id/ed_date"
        android:text="From" 
        android:textColor="#000000"
        android:textStyle="normal|bold"
        android:textSize="20sp" 
        android:layout_marginLeft="18dp"
        android:layout_marginTop="5dp"
        
        />

   <!--  <EditText
        android:id="@+id/ed_from"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/From"
        android:background="@drawable/ed_oval"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:textColor="#000000"
        >

        <requestFocus />
    </EditText>-->
     <AutoCompleteTextView

        android:id="@+id/ed_from"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/From"
        android:background="@drawable/ed_oval"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:textColor="#000000"
      android:ems="8" />
    
    <TextView
        android:id="@+id/To"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_below="@+id/ed_from"
        android:text="To" 
        android:textColor="#000000"
        android:textStyle="normal|bold"
        android:textSize="20sp" 
        android:layout_marginLeft="18dp"
        android:layout_marginTop="5dp"
        />
      <AutoCompleteTextView

        android:id="@+id/ed_To"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/To"
        android:background="@drawable/ed_oval"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:ems="8" />

   <!--  <EditText
        android:id="@+id/ed_To"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/To"
        android:background="@drawable/ed_oval"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:textColor="#000000"
        >

        <requestFocus />
    </EditText>-->
    
    <TextView
        android:id="@+id/Tickets"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_below="@+id/ed_To"
        android:text="Number Of Tickets" 
        android:textColor="#000000"
        android:textStyle="normal|bold"
        android:textSize="20sp" 
        android:layout_marginLeft="18dp"
        android:layout_marginTop="5dp"
        />
    

    <EditText
        android:id="@+id/ed_tickets"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/Tickets"
        android:background="@drawable/ed_oval"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:textColor="#000000"
        >

        <requestFocus />
    </EditText>
   
    
    <TextView
        android:id="@+id/Class"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_below="@+id/ed_tickets"
        android:text="Class" 
        android:textColor="#000000"
        android:textStyle="normal|bold"
        android:textSize="20sp" 
        android:layout_marginLeft="18dp"
        android:layout_marginTop="5dp"
        />
     

   
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:padding="5dip"
        android:paddingLeft="10dip"
        android:layout_below="@+id/Class"
        android:background="@drawable/ed_oval"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textStyle="normal|bold"
        android:spinnerMode="dialog"
        
        
        
        
        
      />

     <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_below="@+id/spinner"
        android:text="Train Name" 
        android:textColor="#000000"
        android:textStyle="normal|bold"
        android:textSize="20sp" 
        android:layout_marginLeft="18dp"
        android:layout_marginTop="5dp"
        />

    <EditText
        android:id="@+id/ed_name"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/Name"
        android:background="@drawable/ed_oval"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:textColor="#000000"
        >

        <requestFocus />
    </EditText>
     <TextView
        android:id="@+id/time_txt"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_below="@+id/ed_name"
        android:text="Time" 
        android:textColor="#000000"
        android:textStyle="normal|bold"
        android:textSize="20sp" 
        android:layout_marginLeft="18dp"
        android:layout_marginTop="5dp"
       
       
        />
     
    <EditText
        android:id="@+id/ed_time"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/time_txt"
        android:background="@drawable/ed_oval"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:hint="@string/time"
        android:textColorHint="#000000"
        android:textColor="#000000"
        >

        <requestFocus />
    </EditText>
    
       <TextView
        android:id="@+id/empty_txt"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_below="@+id/ed_time"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="5dp"
       
        />
        
       
   
    
       <Button
            android:id="@+id/btnPay"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_below="@+id/empty_txt"
            android:layout_marginLeft="18dp"
            android:background="@drawable/button_blue_bg"
            android:text="Pay"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

           
          
    

</RelativeLayout>
