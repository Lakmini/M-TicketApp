<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/listview_background"
    android:padding="8dp"
     >
    
 <TextView
        android:id="@+id/ticket_id_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#43c6db"
        android:typeface="sans"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:padding="1dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />
 
   
    <TextView
        android:id="@+id/date_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ticket_id_txt"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_marginTop="2dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:padding="1dp"
         />
 
   
    <TextView
        android:id="@+id/train_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_txt"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:padding="1dp"
        />
    
     <TextView
        android:id="@+id/source_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/train_name_txt"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:padding="1dp"
        />
      <TextView
        android:id="@+id/destination_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/source_txt"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:padding="1dp"
        />
       <TextView
        android:id="@+id/class_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/destination_txt"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:padding="1dp"
        />
        <TextView
        android:id="@+id/fare_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/class_txt"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:padding="1dp"
        />
         <TextView
        android:id="@+id/arrival_time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fare_txt"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:padding="1dp"
        />
    
 
</RelativeLayout>
