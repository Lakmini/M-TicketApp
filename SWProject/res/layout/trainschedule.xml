<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/background"
    >

    <TextView
        android:id="@+id/datetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="22dp"
        android:text="Date"
        android:textColor="#000000"
        android:textStyle="normal|bold"
        android:textSize="20sp" 
        
         />

    <EditText
        android:id="@+id/date_edtxt"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/datetxt" 
        android:background="@drawable/ed_oval"
        android:hint="@string/date"
        android:inputType="date"
        android:textColorHint="#000000"
        android:textStyle="normal|bold"
        android:textSize="20sp" 
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
         android:textColor="#000000"
        >

        <requestFocus />
    </EditText>
    <TextView
        android:id="@+id/sourcetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
        android:layout_below="@+id/date_edtxt"
        android:text="From" 
        android:textColor="#000000"
        android:textStyle="normal|bold"
        android:textSize="20sp" 
        android:layout_marginLeft="18dp"
        
        />
     <AutoCompleteTextView

        android:id="@+id/source_edtext"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/sourcetxt"
        android:background="@drawable/ed_oval"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textSize="20sp"
        android:textColor="#000000"
      android:ems="8" />

   <!--   <EditText
        android:id="@+id/source_edtext"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/sourcetxt"
        android:background="@drawable/ed_oval"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textSize="20sp"
        >

        <requestFocus />
    </EditText>-->
     <TextView
        android:id="@+id/destinationTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/source_edtext"
        android:text="To" 
        android:textColor="#000000"
        android:textStyle="normal|bold"
        android:textSize="20sp" 
        android:layout_marginLeft="18dp"
        
        />

   <!--  <EditText
        android:id="@+id/ed_to"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/destinationTxt"
        android:background="@drawable/ed_oval"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textSize="20sp"
        >

        <requestFocus />
    </EditText>-->
      <AutoCompleteTextView

        android:id="@+id/ed_to"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/destinationTxt"
        android:background="@drawable/ed_oval"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textSize="20sp"
        android:textColor="#000000"
      android:ems="8" />
    
     <TextView
        android:id="@+id/emptyTxt"
        android:layout_width="wrap_content"
        android:layout_below="@+id/ed_to"
       android:layout_marginLeft="18dp"
       android:layout_height="30dp"        
        />
    
      <Button
            android:id="@+id/btnSearch"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/emptyTxt"
            android:background="@drawable/button_blue_bg"
            android:text="Search"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

</RelativeLayout>
